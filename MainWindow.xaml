<Window x:Class="Microsoft.Research.Kinect.Samples.CursorControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Cursor Control" Height="343" Width="344" Loaded="Window_Loaded" Closed="Window_Closed" 
        WindowStartupLocation="CenterScreen" StateChanged="Window_StateChanged" ResizeMode="CanMinimize" Icon="CursorControl.ico">
    <StackPanel>
        <Image Width="320" Height="240" Name="video"/>
        <CheckBox Name="LeftHand">Left-handed</CheckBox>
        <TextBlock Name="Status" FontSize="36" />
    </StackPanel>
</Window>
